pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clonar el repositorio
                    checkout([$class: 'Git', branches: [[name: 'master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/edansanmar/devops.git']]])

                    // Cargar el archivo despu√©s de clonar el repositorio
                    def pipelineGeneral = load 'vars/pipelineGeneral.groovy'
                    
                    // Ahora puedes usar pipelineGeneral en tu script
                    // ...
                }
            }
        }

        // Otras etapas de tu pipeline
    }
}
